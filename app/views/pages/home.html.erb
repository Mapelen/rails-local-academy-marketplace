<div class="container">
  <% @destinations.each do |destination| %>
    <div class="banner-small" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= destination.picture_url %>');">
      <div class="banner-content">
        <h2><%= destination.name %></h2>
        <%= destination.description %>
        </p>
      </div>
    </div>
      <div class="wrapper-card">
        <div class="row">
        <% destination.expeditions.first(3).each do |exp| %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= exp.photo%>');">

              <div class="card-category"><h6><span class="label label-success"><%= exp.theme%></span></h6></div>
              <div class="card-title">
                <h3><%= exp.title %></h3>
              </div>
              <div class="card-description">
                <p><%= exp.description[0, 150] %></p>
              </div>
              <img class="card-user avatar" src="http://placehold.it/100/100">
              <%= link_to "", expedition_path(exp), class: "card-link" %>
            </div>
          </div>
          <% end %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= link_to destination_path(destination), class: "card-cta-link" do %>
            <div class="card-cta text-center" style="background-color: #F07E98 !important;">
              <div class="card-cta-description">
                <h3><i class="fa fa-plus" aria-hidden="true"></i>
                </h3>
                <p>More Learning Expeditions</p>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
  <% end %>
</div>
